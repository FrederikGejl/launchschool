let ice_cream_taste = 'chocolate'
let ice_cream_density = 10

while(ice_cream_density > 0)
{
    console.log('Drip...');
    ice_cream_density -= 1;
}

console.log('The '+ ice_cream_taste +' ice cream melted.');



let iceCreamTaste = 'chocolate'; // Use camelCase for variable names
let iceCreamDensity = 10; // Use camelCase for variable names

while (iceCreamDensity > 0) { // Add spaces around the condition
    console.log('Drip...');
    iceCreamDensity -= 1;
}

console.log('The ' + iceCreamTaste + ' ice cream melted.'); // Use template literals for string interpolation
