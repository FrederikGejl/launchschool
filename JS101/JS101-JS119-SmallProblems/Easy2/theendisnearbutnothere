
/*
Write a function that returns the next to last word in the String passed to it as an argument.

Words are any sequence of non-blank characters.

You may assume that the input String will always contain at least two words.

console.log(penultimate("last word") === "last"); // logs true
console.log(penultimate("Launch School is great!") === "is"); // logs true

*/



function nextLastWord(String) {
  
return String.slice(5,11);



}

console.log(nextLastWord("Real Madrid"))


function penultimate(string,word) {
  return string.includes(word)
}

console.log(penultimate("last word") === "last"); // logs true

console.log(penultimate("Launch School is great!") === "is"); // logs true

console.log(nextLastWord("Real Madrid"))


function penultimate(string) {
    const words = string.split(" "); // Split the string into an array of words
    return words[words.length - 2];  // Access the second-to-last word
}


console.log(penultimate("Launch School is great!") === "is"); 
